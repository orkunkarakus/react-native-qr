{
	"name": "react-native-qr",
	"version": "0.0.2",
	"description": "Qr generator for react native",
	"source": "./src/index.tsx",
	"main": "./lib/commonjs/index.js",
	"module": "./lib/module/index.js",
	"exports": {
		".": {
			"import": {
				"types": "./lib/typescript/module/src/index.d.ts",
				"default": "./lib/module/index.js"
			},
			"require": {
				"types": "./lib/typescript/commonjs/src/index.d.ts",
				"default": "./lib/commonjs/index.js"
			}
		}
	},
	"files": [
		"src",
		"lib",
		"android",
		"ios",
		"cpp",
		"*.podspec",
		"!ios/build",
		"!android/build",
		"!android/gradle",
		"!android/gradlew",
		"!android/gradlew.bat",
		"!android/local.properties",
		"!**/__tests__",
		"!**/__fixtures__",
		"!**/__mocks__",
		"!**/.*"
	],
	"scripts": {
		"example": "yarn workspace react-native-qr-example",
		"test": "jest",
		"lint": "lint-staged",
		"type:check": "tsc --noEmit",
		"clean": "del-cli android/build example/android/build example/android/app/build example/ios/build lib",
		"prepare": "(husky||true) && bob build",
		"release": "release-it",
		"build": "bob build --target codegen"
	},
	"keywords": [
		"react-native",
		"ios",
		"android"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/orkunkarakus/react-native-qr.git"
	},
	"author": "Orkun Karakus <ork.karakus@gmail.com> (https://orkunkarakus.com)",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/orkunkarakus/react-native-qr/issues"
	},
	"homepage": "https://github.com/orkunkarakus/react-native-qr#readme",
	"publishConfig": {
		"registry": "https://registry.npmjs.org/",
		"access": "public"
	},
	"devDependencies": {
		"@mr.karakus/eslint-config-react-native": "0.0.5",
		"@mr.karakus/prettier-config": "0.0.3",
		"@react-native/eslint-config": "^0.73.1",
		"@release-it/conventional-changelog": "^5.0.0",
		"@types/jest": "^29.5.5",
		"@types/react": "^18.2.44",
		"del-cli": "^5.1.0",
		"eslint": "^8.19.0",
		"husky": "^9.1.5",
		"jest": "^29.7.0",
		"lint-staged": "^15.2.9",
		"prettier": "2.8.8",
		"react": "18.3.1",
		"react-native": "0.75.2",
		"react-native-builder-bob": "^0.30.0",
		"react-test-renderer": "^18.3.1",
		"release-it": "^15.0.0",
		"turbo": "^1.10.7",
		"typescript": "^5.2.2"
	},
	"resolutions": {
		"@types/react": "^18.2.44"
	},
	"peerDependencies": {
		"react": "*",
		"react-native": "*"
	},
	"workspaces": [
		"example"
	],
	"packageManager": "yarn@3.6.1",
	"jest": {
		"preset": "react-native",
		"modulePathIgnorePatterns": [
			"<rootDir>/example/node_modules",
			"<rootDir>/lib/"
		]
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"release-it": {
		"git": {
			"commitMessage": "chore: release ${version}",
			"tagName": "v${version}"
		},
		"npm": {
			"publish": true
		},
		"github": {
			"release": true
		},
		"plugins": {
			"@release-it/conventional-changelog": {
				"preset": "angular"
			}
		}
	},
	"react-native-builder-bob": {
		"source": "src",
		"output": "lib",
		"targets": [
			"codegen",
			[
				"commonjs",
				{
					"esm": true
				}
			],
			[
				"module",
				{
					"esm": true
				}
			],
			[
				"typescript",
				{
					"project": "tsconfig.build.json",
					"esm": true
				}
			]
		]
	},
	"codegenConfig": {
		"name": "RNQrSpec",
		"type": "all",
		"jsSrcsDir": "src",
		"outputDir": {
			"ios": "ios/generated",
			"android": "android/generated"
		},
		"android": {
			"javaPackageName": "com.qr"
		},
		"includesGeneratedCode": true
	},
	"create-react-native-library": {
		"type": "module-mixed",
		"languages": "kotlin-objc",
		"version": "0.41.0"
	},
	"lint-staged": {
		"src/**/*.{js,jsx,ts,tsx}": [
			"eslint --fix --max-warnings 0"
		],
		"example/src/**/*.{js,jsx,ts,tsx}": [
			"eslint --fix --max-warnings 0"
		]
	}
}
